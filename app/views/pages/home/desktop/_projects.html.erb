<% projects.each_with_index do |project, project_index| %>

  <div class="vertical-snap projects-map d-flex" data-project-name="<%= project.title.upcase %>">
    <section id="<%= project.slug %>" class="horizontal-snap slide cover<%= project_index + 1 %> page-<%= project_index + 1 %> pano0-<%= project.slug %> height-100vh pl-100px" data-number="<%= project_index + 1 %>" data-project="<%= project.slug %>" data-button="cover<%= project_index %>" data-pano-index="0">
      <div class="picture-slide mt-16vh position-relative width-100vwminus200px" style="height: calc(100vh - 24vh); background-image: url('<%= cl_image_path project.cover.key %>'); background-position: center; background-size: cover;">

        <span id="openbtn-<%= project.slug %>-cover<%= project_index %>" class="openbtn height-50px width-50px cursor-pointer position-absolute right-30px top-24px d-flex justify-content-end align-items-start" style="display: none !important;">
          <%= image_tag "mq-plus.png", id: "openbtnplus-#{project.slug}-cover#{project_index}", class: "cursor-pointer height-24px" %>
        </span>

        <%= render partial: 'pages/home/desktop/projects/projects_overlay', locals: { project: project, project_index: project_index, background_color: @background_color, opposite_color: @opposite_color, color: @color } %>

      </div>
    </section>

    <%= render partial: 'pages/home/desktop/project_photos', locals: {project: project, project_index: project_index} %>
  </div>

<% end %>
