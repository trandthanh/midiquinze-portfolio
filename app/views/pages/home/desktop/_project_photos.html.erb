<% project.photos.each_with_index do |project_photo, index| %>
  <section class="horizontal-snap slide pano<%= index + 1 %>-<%= project.slug %> height-100vh ml-40px pr-100px-last-child" data-button="pano<%= index %>" data-project="<%= project.slug %>" data-number="<%= project_index + 1 %>" data-pano-index="<%= index + 1%>" data-pano-count="<%= project.photos.count %>" data-project-name="<%= project.title.upcase %>">

    <div class="picture-slide position-relative width-100vwminus17dot3vw margin-top-navbar" style="height: calc(100vh - 22.5vh); background-image: url('<%= cl_image_path project_photo.key %>'); background-position: center; background-size: cover;">

      <span id="openbtn-<%= project.slug %>-pano<%= index %>" class="openbtn height-100px width-100px cursor-pointer position-absolute right-30px top-24px d-flex justify-content-end align-items-start">
        <%= image_tag "mq-plus-#{color}.png", id: "openbtnplus-#{project.slug}-pano#{index}", class: "cursor-pointer height-24px" %>
      </span>

      <%= render partial: 'pages/home/desktop/project_photos/project_photos_overlay', locals: {project: project, index: index, opposite_color: @opposite_color, color: @color} %>

    </div>
  </section>
<% end %>

