  <div class="d-flex">

    <div class="position-sticky top-18vh width-100vwminus200px d-flex justify-content-end" style="height: calc(100vh - 8vh - 18vh); background-image: url('<%= image_path "mq_about_banner.jpg" %>'); background-position: center; background-size: cover;">

